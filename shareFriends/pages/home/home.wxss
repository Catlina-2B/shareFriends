@import "../../compoment/shareList/shareList.wxss";
page{
  /* padding: 10rpx 40rpx; */
  background-image: url("https://www.bestyaoyao.com/shareImages/registBg.jpg");
  background-position: center;
}

.address{
  font-size: 24rpx;
  padding-left: 5%;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  background-color: #fff;
}

.work{
  padding-left: 20rpx;
}

.pickerBox{
  width: 100%;
  height: 600rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 99;
}

.picker{
  width: 100%;
  height: 100%;
  text-align: center;
  background-color: #ccc;
  color: #000;
  position: relative;
}

.confirm{
  width: 140rpx;
  height: 60rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  line-height: 60rpx;
  background: none;
  border: none;
  color: #000;
  z-index: 4;
}
