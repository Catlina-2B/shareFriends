/* pages/friendInformation/friendInformation.wxss */
@import "../../compoment/dyamicList/dyamicList.wxss";
page{
  background-color: #f5f5f5;
}

.personImg{
  width: 100%;
  height: 550rpx;
  background-color: rgba(255, 255, 255, .8);
  background-size: cover;
  background-position: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}

.mask{
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, .1);
  z-index: 2;
}

.back{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 10rpx;
  top: 10rpx;
}

.back image{
  width: 100%;
  height: 100%;
}

.report{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  color: #ffffff;
  font-size: 32rpx;
  z-index: 3;
}

.personName{
  margin-top: 120rpx;
  margin-left: 40rpx;
  color: #ffffff;
  z-index: 3;
}

.nickName{
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.shareId{
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.pleasure{
  display: flex;
  flex-direction: row;
}

.vip{
  font-size: 24rpx;
  height: 30rpx;
  width: 56rpx;
  text-align: center;
  line-height: 30rpx;
  background-color:#FFD700;
  border-radius: 10rpx;
  padding: 2rpx 4rpx;
  margin-right: 6rpx;
}

.level{
  font-size: 24rpx;
  height: 30rpx;
  width: 56rpx;
  text-align: center;
  line-height: 30rpx;
  background-color:#f2f;
  border-radius: 10rpx;
  padding: 2rpx 4rpx;
  margin-right: 6rpx;
}

.history{
  width: 90%;
  height: 100rpx;
  border-radius: 10rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 10rpx 10rpx #d3d3d3;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: auto;
  z-index: 4;
  padding: 10rpx;
}

.history image{
  width: 30rpx;
  height: 30rpx;
}

.value{
  color: #ffffff;
  display: flex;
  flex-direction: row;
  padding-left: 40rpx;
  margin-top: 60rpx;
}

.value>view{
  display: flex;
  flex-direction: row;
  height: 60rpx;
  line-height: 60rpx;
  margin-right: 20rpx;
}

.value .valueName{
  font-size: 28rpx;
}

.value text{
  font-size: 40rpx;
}

.like{
  display: flex;
  flex-direction: row;
  padding-left: 40rpx;
  color: #ffffff;
  font-size: 30rpx;
  margin-bottom: 60rpx;
}

.like view{
  width: 130rpx;
  height: 50rpx;
  border-radius: 50rpx;
  line-height: 50rpx;
  margin-right: 40rpx;
  text-align: center;
}

.compose{
  background-color: rgba(225, 225, 225, .3);
}

.tabView{
  width: 100%;
  margin: auto;
  height: 84rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 20rpx;
  line-height: 40rpx;
  background-color: #fdfdfd;
}

.tabView view{
  width: 160rpx;
  font-size: 36rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.active{
  color: #f2f;
  border-bottom: 2px solid #f2f;
}

.split{
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}