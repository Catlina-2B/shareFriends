/**app.wxss**/
@import "compoment/toast/toast.wxss";

page{
  font-family: "楷体";
  padding-bottom: 80rpx;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.navBox{
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #c9c9c9;
  background-color: #fff;
  z-index: 99;
}

.nav{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #0101015f;
}

.nav .active{
  color: #f2f;
}